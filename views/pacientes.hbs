<header class="p-4 text-center flex-center bg-primary text-white">
        <h1>CENTRO MÉDICO SALUD Y VIDA</h1>
    </header>

    <main class="p-3">
        <table class="table table-striped text-center">
            <h2 class="text-center">LISTADO DE PACIENTES</h2>
            <thead>
                <tr>
                    <th>Nombres</th>
                    <th>Apellidos</th>
                    <th>Número de Cédula</th>
                    <th>Fecha de Nacimiento</th>
                    <th>Telefono</th>
                </tr>
            </thead>

            <tbody id="cuerpo-tabla-pacientes">
                {{#each resultado}}
                <tr scope = "row">
                    <td>{{nombre}}</td>
                    <td>{{apellido}}</td>
                    <td>{{cedula}}</td>
                    <td>{{formatoFecha fecha_nacimiento}}</td>
                    <td>{{telefono}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </main>
    
    <div class="text-center text-center d-grid gap-2 p-3">
        <a href="../index.html" role="button" class="btn btn-warning">Volver</a>
    </div>
